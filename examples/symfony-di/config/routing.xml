<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="controllerRoot" type="string">gordonmcvey\exampleapp\controller</parameter>
    </parameters>

    <services>
        <defaults autoconfigure="true" autowire="true"/>

        <service id="RoutingStrategyInterface" class="gordonmcvey\WarpCore\routing\PathNamespaceStrategy">
            <argument type="string">%controllerRoot%</argument>
        </service>

        <service id="RouterInterface" class="gordonmcvey\WarpCore\routing\Router">
            <argument type="service" id="RoutingStrategyInterface" />
        </service>
    </services>
</container>
